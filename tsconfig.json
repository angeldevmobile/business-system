{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true, // Habilitar soporte para .js y .jsx
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx", // Incluir archivos .jsx en el proyecto
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
